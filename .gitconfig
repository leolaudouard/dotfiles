[user]
	name = Leo Laudouard
	email = leo.laudouard@easymile.com
[alias]
	br = branch
	bra = branch --all
	st = status
	co = checkout
	cb = checkout -b
	ci = commit
	mff = merge --ff-only
	plz = push --force-with-lease
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	as = assembler
[core]
	excludesfile = /home/leo/.gitignore_global
	editor = vi
  pager = diff-so-fancy | less
[diff]
	tool = meld
[merge]
	tool = meld
[interactive]
  diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[help]
	autocorrect = 20
